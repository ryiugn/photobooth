# Photobooth API Environment Variables
# Copy this file to .env and fill in the values

# Database (Vercel Postgres or local PostgreSQL)
# Format: postgresql+asyncpg://user:password@host:port/database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/photobooth

# Authentication
# Generate a new hash with: python -c "import bcrypt; print(bcrypt.hashpw('YOUR_PIN'.encode(), bcrypt.gensalt(12)).decode())"
PIN_HASH=$2b$12$LQv3c1yqBWVHxkd0LHAkCOYz6TtxMQJqhN8/LewY5NU7TiK.MnKHq

# JWT Secret - generate a random string
JWT_SECRET=your-secret-key-change-in-production-min-32-chars

# CORS - Frontend URL(s)
FRONTEND_URL=http://localhost:5173

# Supabase (optional - for cloud storage)
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_KEY=your-anon-key

# File Storage Paths (relative to project root)
FRAMES_DIR=project_files/frames
TEMPLATES_DIR=project_files/templates
UPLOADS_DIR=project_files/uploads
SESSIONS_DIR=project_files/sessions
STRIPS_DIR=project_files/strips

# Processing Settings
MAX_PHOTO_SIZE_MB=10
PHOTO_QUALITY=95

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_SECONDS=300
